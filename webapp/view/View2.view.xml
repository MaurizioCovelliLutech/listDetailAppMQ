 <mvc:View controllerName="project1.controller.View1"
  xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page
        title="{i18n>titleDetail}">
        <ObjectHeader
            title="{Carrname}"
            number="{Carrid}"
            icon="sap-icon://flight"
            />
        <Table
            id="connectionsTable"
            items="{/UX_C_Connection_TP}">
            <headerToolbar>
                <Toolbar>
                    <Title text="{i18n>titleDetail}" level="H2"/>
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <Text text="{i18n>colNumber}"/>
                </Column>
                <Column>
                    <Text text="{i18n>colFrom}"/>
                </Column>
                <Column>
                    <Text text="{i18n>colTo}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{Carrid}"/>
                        <Text text="{Cityfrom}"/>
                        <Text text="{Cityto}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>